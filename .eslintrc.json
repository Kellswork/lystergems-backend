{
  "extends": [
    "airbnb",
    "plugin:prettier/recommended"
  ],
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "jest": true,
    "node": true
  },
  "rules": {
    "prettier/prettier": "error",
    "no-unused-vars": [2, {"vars": "all", "args": "all"}],
    "no-console": 2,
    "func-names": "off",
    "no-process-exit": "off",
    "object-shorthand": [2, "always"],
    "class-methods-use-this": "off",
    "key-spacing": [2, {
      "beforeColon": false,
      "afterColon": true
    }],
    "indent": ["warn", 2],
    "max-len": [
      "warn",
      {
        "code": 80,
        "tabWidth": 2,
        "comments": 80,
        "ignoreComments": false,
        "ignoreTrailingComments": true,
        "ignoreUrls": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true,
        "ignoreRegExpLiterals": true
      }
    ]
  }
}
